<div class="blog-post">
        <h2 class="blog-post-title"><%= link_to blog.title, blog_path(blog) %></h2>
        <%  if logged_in?(:site_admin)%>
        <p class="blog-post-meta"><%= link_to blog.status, toggle_status_blog_path(blog) %> /

        <%= link_to 'Edit', edit_blog_path(blog) %>/
        <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end%>
        <p><%= markdown blog.body %></p>
   </div>

 