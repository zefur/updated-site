

 
    <div class="blog-post">
        <h2 class="blog-post-title"><%= link_to blog.title, blog_path(blog) %></h2>
        <p><%= truncate(blog.body, length: 500) %></p>
        <p><small>Tags: <%= raw tag_links(blog.tag_list) %></small></p>
        <p>comments: <%= blog.comments.count %>
        <p><%= link_to "Read Post", blog_path(blog) %></p>
        <%  if logged_in?(:site_admin)%>
        <p><%= link_to blog.status, toggle_status_blog_path(blog) %></p>
        <p><%= link_to "Edit", edit_blog_path(blog)%>
        <p><%= button_to "Delete", blog, method: :delete, data: {confirm: 'Are you sure?'} %>
        <%end%>
    </div>